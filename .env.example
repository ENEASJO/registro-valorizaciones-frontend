# Variables de entorno para producción en Vercel
VITE_ENVIRONMENT=production

# URL del Backend API (Railway con Playwright) - URL unificada
VITE_BACKEND_URL=https://registro-valorizaciones-backend-production.up.railway.app

# Configuración de Base de Datos Neon
VITE_DATABASE_URL=postgresql://user:password@hostname/database

# API externa para consulta RUC (opcional)
VITE_APIS_NET_PE_TOKEN=tu-token-de-apis-net-pe

# Configuración de autenticación (opcional)
VITE_AUTH_ENABLED=false

# Configuración de logging
VITE_LOG_LEVEL=error

# Configuración adicional para Railway con Playwright
VITE_API_TIMEOUT=45000
VITE_RETRY_ATTEMPTS=2
VITE_DEBUG=false

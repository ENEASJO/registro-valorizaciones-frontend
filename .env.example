# Variables de entorno para producción en Vercel
VITE_ENVIRONMENT=production

# URL del Backend API (Google Cloud Run con Playwright)
VITE_BACKEND_URL=https://valoraciones-backend-tlsf2bieua-uc.a.run.app

# Configuración de Supabase
VITE_SUPABASE_URL=https://tu-proyecto.supabase.co
VITE_SUPABASE_ANON_KEY=tu-clave-anonima-de-supabase

# API externa para consulta RUC (opcional)
